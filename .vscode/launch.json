    "version": "0.2.0",
    "configurations": [
        {
            "name": "VideoPlayer",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "cam_01",
                "--video_file", "C:/Temp/cam_1.mp4",
                // "--loop"
                "--show"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "CameraAgent",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "cam_00",
                "--output_dir", "C:/Temp/videos",
                "--video_interval", "30s"
            ],
            "console": "integratedTerminal"
        }
    ]
}